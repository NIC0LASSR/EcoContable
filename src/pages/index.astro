---
import Layout from '../layouts/Layout.astro';

---

<Layout title="Eco Contable">
    <main class="">
        <!-- Header -->
        <header class="bg-white/70 backdrop-blur-md pt-10 pr-32 flex items-center justify-center  max-h-20 fixed top-0  w-full text-slate-800 ">
            <div class="flex-shrink-0 flex justify-center md:justify-center  mb-10 p-1">
                <img src="/images/logo-eco_contable.png" alt="Logo Eco Contable" class="h-52 w-auto pb-1 md:h-52" />
            </div>
            <nav class="mb-10">
                <ul class="flex space-x-6 text-xl font-semibold">
                    <li><a  class="hover:underline" href="#home">Inicio</a></li>
                    <li><a class="hover:underline"  href="#servicios" >Servicios</a></li>
                    <li><a class="hover:underline"  href="#contacto" >Contacto</a></li>
                </ul>
            </nav>
        </header>
        <!-- Sección Home -->
        <section id="home" class="grid grid-cols-1 md:grid-cols-2 gap-20 leading-snug justify-items-center tracking-wide text-slate-700 px-10 md:px-20 pt-40 pb-20 mx-auto max-w-7xl">
            <!-- Texto home -->
            <div class="flex flex-col items-start md:items-baseline text-left md:text-left">
                <h2 class="text-4xl md:text-6xl m-5">
                    <span class="font-semibold">Tu negocio es único</span> nuestra consultoría también.
                </h2>
                <p class="text-xl md:text-3xl mx-5">
                    Soluciones a medida para tus necesidades específicas.
                </p>
            </div>
            <!-- Imagen home -->
            <div class="flex justify-center flex-shrink-0">
                <img src="/images/home.png" alt="Home" class="w-full h-auto"/>
            </div>
        </section>

        <!-- Sección Servicios -->
        <section id="servicios" class="bg-gradient-to-r from-emerald-50 to-gray-100 border border-gray-300 pt-20 pb-24 px-6">
            <div class="text-center">
                <p class="text-2xl font-semibold mb-4 text-slate-700">¿Necesitas ayuda con tu negocio?</p>
                <h2 class="text-4xl font-bold text-slate-700  mb-14">Nuestros servicios</h2>
            </div>

            <div class= "max-w-5xl mx-auto grid grid-cols-1 md:grid-cols-2 gap-14">
                <!-- Servicios -->
                <div class="bg-white p-6 rounded-lg shadow-md border border-gray-300 pb-10">
                    <div class="h-48 bg-center bg-contain bg-no-repeat" style="background-image: url('/images/revisoria_fiscal.png');"></div>
                    <div class="mt-4 text-center text-xl font-semibold text-slate-700">Revisoría fiscal</div>
                    <div class="mt-4 text-center">
                        <!-- Botón de Contacto -->
                        <a href="https://api.whatsapp.com/send?phone=573114498767" 
                            target="_blank" 
                            class="px-4 py-2 bg-green-500 text-white font-semibold rounded-md shadow-md hover:bg-green-600 transition">
                            Contactar por WhatsApp
                        </a>
                    </div> 
                </div>

                <div class="bg-white p-6 rounded-lg shadow-md border border-gray-300 pb-10">
                    <div class="h-48 bg-center bg-contain bg-no-repeat" style="background-image: url('/images/asesoria_contable.jpg');"></div>
                    <div class="mt-4 text-center text-xl font-semibold text-slate-700">Asesoría contable</div>
                    <div class="mt-4 text-center">
                        <!-- Botón de Contacto -->
                        <a href="https://api.whatsapp.com/send?phone=573114498767" 
                            target="_blank" 
                            class="px-4 py-2 bg-green-500 text-white font-semibold rounded-md shadow-md hover:bg-green-600 transition">
                            Contactar por WhatsApp
                        </a>
                    </div> 
                </div>

                <div class="bg-white p-6 rounded-lg shadow-md border border-gray-300">
                    <div class="h-48 bg-center bg-contain bg-no-repeat" style="background-image: url('/images/impuestos.jpg');"></div>
                    <div class="mt-4 text-center text-xl font-semibold text-slate-700">Impuestos</div>
                    <div class="mt-4 text-center">
                        <!-- Botón de Contacto -->
                        <a href="https://api.whatsapp.com/send?phone=573114498767" 
                            target="_blank" 
                            class="px-4 py-2 bg-green-500 text-white font-semibold rounded-md shadow-md hover:bg-green-600 transition">
                            Contactar por WhatsApp
                        </a>
                    </div>
                </div>

                <div class="bg-white p-6 rounded-lg shadow-md border border-gray-300">
                    <div class="h-48 bg-center bg-contain bg-no-repeat" style="background-image: url('/images/declaracion_renta.jpg');"></div>
                    <div class="mt-4 text-center text-xl font-semibold text-slate-700">Declaración de renta</div>
                    <div class="mt-4 text-center">
                        <!-- Botón de Contacto -->
                        <a href="https://api.whatsapp.com/send?phone=573114498767" 
                            target="_blank" 
                            class="px-4 py-2 bg-green-500 text-white font-semibold rounded-md shadow-md hover:bg-green-600 transition">
                            Contactar por WhatsApp
                        </a>
                    </div> 
                </div>

                <div class="bg-white p-6 rounded-lg shadow-md border border-gray-300 pb-10">
                    <div class="h-48 bg-center bg-contain bg-no-repeat" style="background-image: url('/images/nomina.jpg');"></div>
                    <div class="mt-4 text-center text-xl font-semibold text-slate-700">Nómina</div>
                    <div class="mt-4 text-center">
                        <!-- Botón de Contacto -->
                        <a href="https://api.whatsapp.com/send?phone=573114498767" 
                            target="_blank" 
                            class="px-4 py-2 bg-green-500 text-white font-semibold rounded-md shadow-md hover:bg-green-600 transition">
                            Contactar por WhatsApp
                        </a>
                    </div> 
                </div>

                <div class="bg-white p-6 rounded-lg shadow-md border border-gray-300">
                    <div class="h-48 bg-center bg-contain bg-no-repeat" style="background-image: url('/images/asesoria_financiera.jpg');"></div>
                    <div class="mt-4 text-center text-xl font-semibold text-slate-700">Asesoría financiera</div>
                    <div class="mt-4 text-center">
                        <!-- Botón de Contacto -->
                        <a href="https://api.whatsapp.com/send?phone=573114498767" 
                            target="_blank" 
                            class="px-4 py-2 bg-green-500 text-white font-semibold rounded-md shadow-md hover:bg-green-600 transition">
                            Contactar por WhatsApp
                        </a>
                    </div> 
                </div>
            </div>
        </section>

        <!-- Sección Contacto -->
        <section id="contacto" class="my-10 py-16 px-6 flex flex-col md:flex-row items-center justify-center gap-10">
            <!-- Formulario de Contacto-->
            <div class="max-w-lg w-full bg-gray-50 shadow-lg rounded-lg p-8">
                <h2 class="text-3xl font-bold text-center text-slate-700 mb-6">Formulario de Contacto</h2>
                <p class="text-center text-slate-600 mb-8">Déjanos un mensaje y nos pondremos en contacto contigo.</p>

                <form name="contacto" method="POST" autocomplete="off" class="space-y-6" data-netlify="true">
                    <!-- Nombre -->
                    <div>
                        <label for="name" class="block text-lg font-medium text-slate-700">Nombre</label>
                        <input type="text" id="name" name="name" placeholder="Ingrese su nombre"
                            class="w-full mt-2 px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-cyan-600 focus:outline-none"
                            required />
                    </div>

                    <!-- Correo Electrónico -->
                    <div>
                        <label for="email" class="block text-lg font-medium text-slate-700">Correo Electrónico</label>
                        <input type="email" id="email" name="email" placeholder="Ingrese su correo electrónico"
                            class="w-full mt-2 px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-cyan-600 focus:outline-none"
                            required />
                    </div>

                    <!-- Teléfono -->
                    <div>
                        <label for="telefono" class="block text-lg font-medium text-slate-700">Teléfono</label>
                        <input type="tel" id="telefono" name="telefono" placeholder="Ingrese su teléfono"
                            class="w-full mt-2 px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-cyan-600 focus:outline-none"
                            pattern="[0-9]{10}"/>
                    </div>

                    <!-- Consulta -->
                    <div>
                        <label for="mensaje" class="block text-lg font-medium text-slate-700">Consulta</label>
                        <textarea id="mensaje" name="mensaje" placeholder="Motivo de consulta"
                            class="w-full mt-2 px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-cyan-600 focus:outline-none resize-none"
                            rows="3" required></textarea>
                    </div>

                    <!-- Botón de Enviar -->
                    <div class="text-center">
                        <button type="submit"
                            class="w-full px-6 py-3 bg-cyan-600 text-white font-semibold rounded-md shadow-md transition duration-300 hover:bg-cyan-400 focus:ring-2 focus:ring-offset-2 focus:ring-cyan-600">
                            Enviar Mensaje
                        </button>
                    </div>
                </form>
            </div>
        </section>

        <!-- Footer -->
        <footer class="bg-gradient-to-r from-gray-100 to-emerald-50 text-center font-semibold text-slate-700 py-4">
            <p class="text-xl">Eco Contable - Todos los derechos reservados</p>
        </footer>
    </main>
</Layout>
